@model IEnumerable<CrudTest.Entities.News>
@{
    var category = ViewData["NewsofCategory"] as CrudTest.Entities.Category;
    var random = new Random();
    Layout = "_Layout";
}

<body>
    <h1>News in @category.Name</h1>

    @if (!Model.Any())
    {
        <p>No news available for this category.</p>
    }
    else
    {
        @foreach (var item in Model.Where(n => !n.IsDeleted))
        {
            var views = random.Next(100, 10000);
            var time = random.Next(1, 60);
            var comments = random.Next(50, 600);
            <div class="post">
                <div class="row">
                    <div class="col-md-1">
                        <div class="wrap-ut pull-left">
                            <div class="userinfo pull-left">
                                <div class="avatar">
                                    <img src="~/images/avatar.jpg" alt="">
                                    <div class="status green"> &nbsp;</div>
                                </div>
                                <div class="icons">
                                    <img src="~/images/icon1.jpg" alt=""><img src="~/images/icon4.jpg" alt="">
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--<div class="col-md-3">
                        <div class="image pull-left">
                            <img src="@Url.Content(item.Image)" alt="Image" style="max-width: 150px; max-height: 150px;" />
                        </div>
                    </div>-->
                    <div class="col-md-10">
                        <div class="wrap-ut pull-left">
                            <div class="posttext pull-left">
                                <h2>@item.Name</h2>
                                <p>@item.Content</p>
                            </div>
                            <div class="postinfo pull-left">
                                <div class="comments">
                                    <div class="commentbg">
                                        @comments
                                        <div class="mark"></div>
                                    </div>
                                </div>
                                <div class="views"><i class="fa fa-eye"></i> @views</div>
                                <div class="time"><i class="fa fa-clock-o"></i> @time min</div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
        }
    }
</body>

