@model List<CrudTest.Entities.News>
@{
    var random = new Random();
    Layout = "_Layout";
}

@if (Model != null && Model.Any())
{
    foreach (var news in Model)
    {
        var views = random.Next(100, 10000);
        var time = random.Next(1, 60);
        var comments = random.Next(50, 600);
        <div class="post">
            <div class="row">
                <div class="col-md-1">
                    <div class="wrap-ut pull-left">
                        <div class="userinfo pull-left">
                            <div class="avatar">
                                <img src="~/images/avatar.jpg" alt="">
                                <div class="status green"> &nbsp;</div>
                            </div>
                            <div class="icons">
                                <img src="~/images/icon1.jpg" alt=""><img src="~/images/icon4.jpg" alt="">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="image pull-left">
                        <img src="@Url.Content(news.Image)" alt="Image" style="max-width: 150px; max-height: 150px;" />
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="wrap-ut pull-left">
                        <div class="posttext pull-left">
                            <h2>@news.Name</h2>
                            <p>@news.Content</p>
                        </div>
                        <div class="postinfo pull-left">
                            <div class="comments">
                                <div class="commentbg">
                                    @comments
                                    <div class="mark"></div>
                                </div>
                            </div>
                            <div class="views"><i class="fa fa-eye"></i> @views</div>
                            <div class="time"><i class="fa fa-clock-o"></i> @time min</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
    }
}
else
{
    <p>No news available.</p>
}
