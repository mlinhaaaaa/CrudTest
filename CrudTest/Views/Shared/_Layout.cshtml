@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CrudTest</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CrudTest.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a id="logo" class="navbar-brand" href="@Url.Action("Dashboad", "Home")">CrudTest</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <div id="categoryHeaderContainer">
                        @await Html.PartialAsync("_CategoryHeader", (IEnumerable<CrudTest.Entities.Category>)ViewData["Categories"])
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <div id="newsContainer">
                <!-- News will be loaded here -->
            </div>
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - CrudTest - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script type="text/javascript">
        $(document).ready(function () {
            $.ajax({
                url: '@Url.Action("GetDataHeader", "Categories")',
                type: 'GET',
                success: function (data) {
                    $('#categoryHeaderContainer').html(data);
                    $('.category-link').on('click', function () {
                        var categoryId = $(this).data('category-id');
                        loadNewsByCategory(categoryId);
                    });
                },
                error: function () {
                    $('#categoryHeaderContainer').html('<p>Error loading categories.</p>');
                }
            });

            function loadNewsByCategory(categoryId) {
                $.ajax({
                    url: '@Url.Action("GetNewsByCategory", "Categories")',
                    type: 'GET',
                    data: { categoryId: categoryId },
                    success: function (data) {
                        $('#newsContainer').html(data);
                    },
                    error: function () {
                        $('#newsContainer').html('<p>Error loading news.</p>');
                    }
                });
            }
        });
    </script>
</body>
</html>
